.playlist-container{
  width:220rpx;
  margin-top: 1rpx;
  position: relative;
  padding-bottom: 13rpx;
  padding-top: 5rpx;
}

.playlist-img{
  width: 100%;
  height: 250rpx;
  border-radius: 20rpx;
}

.playlist-count{
  position: absolute;
  top: -5rpx;
  padding-left: 26rpx;
  right: 10rpx;
}

.playlist-counts{
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 #8a8a8a;
  margin: 0,8rpx,0,8rpx;
}

.playlist-bg{
  width: 28rpx;
  height: 28rpx;
  position: relative;
  top: 5rpx;
}

.playlist-name{
  font-size: 26rpx;
  line-height: 1.4;
  padding: 2rpx,0,0,100rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}